{% for product in collection.products %}
    <div class="product">
        <img 
            src="{{ product.featured_media.src | image_url }}" 
            alt="{{ product.featured_media.alt }}">
        
        <h2 class="fs-4">{{ product.title }}</h2>

        <p>{{ product.description }}</p>

        <a href="{{ product.url }}" class="btn">See Product</a>
    </div>
{% endfor %}

{% schema %}
{
    "name": "Main Collection",
    "tag": "section",
    "class": "main-collection",
    "presets": [
        {
            "name": "Main Collection"
        }
    ]
}
{% endschema %}

